mixin catalog(data)
    .catalog&attributes(attributes)
        - var items = data.items;

        ul.catalog__list.flex
            each item in items

                - var specialsClass = item.specials;

                if specialsClass
                    li.catalog__item.catalog__item_special
                        .catalog__item-w
                            .catalog__top
                                a.catalog__link(href="#")
                                    .catalog__badge Спецпредложение
                                    picture.catalog__picture
                                        source.catalog__picture-source(type='image/webp' media='(min-width:300px)' data-srcset='assets/images/content/' + item.image + '@2x.webp 2x, assets/images/content/' + item.image + '.webp 1x')
                                        source.catalog__picture-source(type='image/png' media='(min-width:300px)' data-srcset='assets/images/content/' + item.image + '@2x.png 2x, assets/images/content/' + item.image + '.png 1x')
                                        img.catalog__picture-image.lazy(data-src='assets/images/content/' + item.image + '@2x.png' alt="service image")


                            .catalog__body
                                .catalog__title
                                    a.catalog__link(href="#") Коттедж «Дом рыбака»

                                .catalog__meta.flex
                                    .catalog__meta-item
                                        .catalog__meta-title Цена от:
                                        .catalog__meta-price
                                            .catalog__meta-val
                                                span.catalog__meta-quant #{item.price}
                                                | руб.

                                    .catalog__meta-item
                                        .catalog__meta-title Кол-во мест:
                                        .catalog__meta-places
                                            .catalog__meta-val
                                                | На
                                                span.catalog__meta-quant #{item.places}
                                                | чел.

                                a.catalog__button.button(href="#") Забронировать

                else

                    li.catalog__item

                        .catalog__item-w
                            a.catalog__link(href="#")
                                picture.catalog__picture
                                    source.catalog__picture-source(type='image/webp' media='(min-width:300px)' data-srcset='assets/images/content/' + item.image + '@2x.webp 2x, assets/images/content/' + item.image + '.webp 1x')
                                    source.catalog__picture-source(type='image/png' media='(min-width:300px)' data-srcset='assets/images/content/' + item.image + '@2x.png 2x, assets/images/content/' + item.image + '.png 1x')
                                    img.catalog__picture-image.lazy(data-src='assets/images/content/' + item.image + '@2x.png' alt="service image")

                            .catalog__body
                                .catalog__title
                                    a.catalog__link(href="#") #{item.title}

                                .catalog__meta.flex
                                    .catalog__meta-item
                                        .catalog__meta-title Цена от:
                                        .catalog__meta-price
                                            .catalog__meta-val
                                                span.catalog__meta-quant #{item.price}
                                                | руб.

                                    .catalog__meta-item
                                        .catalog__meta-title Кол-во мест:
                                        .catalog__meta-places
                                            .catalog__meta-val
                                                | На
                                                span.catalog__meta-quant #{item.places}
                                                | чел.

                                a.catalog__button.button(href="#") Забронировать


            //- li.catalog__item.catalog__item_special

                .catalog__item-w
                    .catalog__top
                        a.catalog__link(href="#")
                            .catalog__badge Спецпредложение
                            picture.catalog__picture
                                source.catalog__picture-source(type='image/webp' media='(min-width:300px)' data-srcset='assets/images/content/catalog-2@2x.webp 2x, assets/images/content/catalog-2.webp 1x')
                                source.catalog__picture-source(type='image/png' media='(min-width:300px)' data-srcset='assets/images/content/catalog-2@2x.png 2x, assets/images/content/catalog-2.png 1x')
                                img.catalog__picture-image.lazy(data-src='assets/images/content/catalog-2@2x.png' alt="service image")


                    .catalog__body
                        .catalog__title
                            a.catalog__link(href="#") Коттедж «Дом рыбака»

                        .catalog__meta.flex
                            .catalog__meta-item
                                .catalog__meta-title Цена от:
                                .catalog__meta-price
